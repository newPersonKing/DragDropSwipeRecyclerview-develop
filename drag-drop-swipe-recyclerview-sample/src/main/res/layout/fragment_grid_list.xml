<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_main">

    <com.ernestoyaquello.dragdropswiperecyclerview.DragDropSwipeRecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:item_layout="@layout/list_item_grid_list_cardview"
        app:behind_swiped_item_custom_layout="@layout/behind_swiped_grid_list"
        app:behind_swiped_item_custom_layout_secondary="@layout/behind_swiped_grid_list_secondary"
        app:swiped_item_opacity_fades_on_swiping="true"/>

    <ProgressBar
        android:id="@+id/loading_indicator"
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:scaleX="1.25"
        android:scaleY="1.25"
        android:layout_gravity="center"/>

</FrameLayout>